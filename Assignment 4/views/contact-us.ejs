<style
>

@import url(clash-display.css);
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap");
.form-area {
	padding-top: 7%;
  padding-bottom: 7%;
}
.row.single-form {
	box-shadow: 0 2px 20px -5px rgba(0,0,0,0.5);
}
.left {
  background: linear-gradient(to right, #d7afaf, #b9bcdc);
	padding: 200px 98px;
  height: 100%;
}
.left h2 {
	font-family: poppins;
	color: #fff;
	font-weight: 700;
	font-size: 48px;
}
.left h2 span {
	font-weight: 100;
}
.single-form{
    background: #fff;
}
.right {
	padding: 70px 100px;
	position: relative;
}
.right i {
	position: absolute;
	font-size: 80px;
	left: -27px;
	top: 40%;
	color: #fff;
}
.form-control {
	border: 2px solid #000;
}
.right button {
	border: none;
	border-radius: 0;
	background: #252525;
	width: 180px;
	color: #fff;
	padding: 15px 0;
	display: inline-block;
	font-size: 16px;
	margin-top: 20px;
	cursor: pointer;
}
.right button:hover{
    background-color: #252525;
}


@media (min-width:768px) and (max-width:991px){
    .right i {
	top: -52px;
	transform: rotate(90deg);
	left: 50%;
}
}

@media (max-width:767px){
    .left {
  padding: 90px 15px;
  text-align: center;
}
.left h2 {
  font-size: 25px;
}
.right {
  padding: 25px;
}
.right i {
  top: -52px;
  transform: rotate(90deg);
  left: 46%;
}
    .right button {
	width: 150px;
	padding: 12px 0;
}
    
}
.input-container {
  display: flex;
  align-items: center;
}

.red-dot {
  color: red;
  font-size: 20px;
  margin-left: 5px;
}
</style>
<body>
  
  <div class="form-area">
    <div class="container">
      <div class="row single-form g-0">
        <div class="col-sm-12 col-lg-6">
          <div class="left">
            <h2><span>Get in touch</span> <br>With us</h2>
          </div>
        </div>
        <div class="col-sm-12 col-lg-6">
          <div class="right">
            <i class="fa fa-caret-left"></i>
            <form id="contactForm" action="contact-us.html" method="post">
              <div class="mb-3">
                <label for="exampleInputName1" class="form-label">Your Name</label>
                <div class="input-container">
                  <input type="text" class="form-control" name="name" id="exampleInputName1" aria-describedby="nameHelp">
                  <span id="nameDot" class="red-dot"></span>
                </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <div class="input-container">
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <span id="emailDot" class="red-dot"></span>
                </div>
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Gender</label>
                <div class="input-container">
                  <select class="form-control" name="gender" id="exampleFormControlSelect1">
                    <option value="" disabled selected hidden></option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                    <option value="Other">Other</option>
                  </select>
                  <span id="genderDot" class="red-dot"></span>
                </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputMessag1" class="form-label">Message</label>
                <div class="input-container">
                  <textarea class="form-control" name="message" id="exampleInputMessag1"></textarea>
                  <span id="messageDot" class="red-dot"></span>
                </div>
              </div>
              <button type="submit" class="btn btn-primary" id="submitbutton">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      let nameField = $("#exampleInputName1");
      let emailField = $("#exampleInputEmail1");
      let genderField = $("#exampleFormControlSelect1");
      let messageField = $("#exampleInputMessag1");

      $("#contactForm").submit(function(event) {
        event.preventDefault();

        let selectedIndex = genderField.val();

        check(nameField, 'nameDot');
        check(emailField, 'emailDot');
        check(genderField, 'genderDot');
        check(messageField, 'messageDot');

        if (!nameField.val() || !emailField.val() || !selectedIndex || !messageField.val()) {
          console.log("Form is invalid");
        } else {
          console.log("Form is valid");
          this.submit(); // Submit the form if validation passes
        }
      });

      function check(field, dotId) {
        let redDot = $("#" + dotId);
        let selectedIndex = genderField.val();
        if (field.is(genderField)) {
          if (!selectedIndex) {
            redDot.text('•');
          } else {
            redDot.text('');
          }
        } else {
          if (!field.val()) {
            redDot.text('•');
          } else {
            redDot.text('');
          }
        }
      }
    });
  </script>
</body>
</html>
