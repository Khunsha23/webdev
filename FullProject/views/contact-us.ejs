<link rel="stylesheet" href="contactstyle.css">
<link rel="js" href="/contact-us.js">

<div class="form-area">
    <div class="container">
        <div class="row single-form g-0">
            <div class="col-sm-12 col-lg-6">
                <div class="left">
                    <h2><span>Get in touch</span> <br>With us</h2>
                </div>
            </div>
            <div class="col-sm-12 col-lg-6">
                <div class="right">
                   <i class="fa fa-caret-left"></i>
                    <form>
                      <div class="mb-3">
                        <label for="exampleInputName1" class="form-label">Your Name</label>
                        <div class="input-container">
                          <input type="text" class="form-control" id="exampleInputName1" aria-describedby="emailHelp">
                          <span id="nameDot" class="red-dot"></span>
                        </div>
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <div class="input-container">
                          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                          <span id="emailDot" class="red-dot"></span>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlSelect1">Gender</label>
                        <div class="input-container">
                          <select class="form-control" id="exampleFormControlSelect1">
                            <option value="0" disabled selected hidden></option>
                            <option value="1">Female</option>
                            <option value="2">Male</option>
                            <option value="3">Other</option>
                          </select>
                          <span id="genderDot" class="red-dot"></span>
                        </div>
                      </div>
                      
                      <div class="mb-3">
                        <label for="exampleInputMessag1" class="form-label">Message</label>
                        <div class="input-container">
                          <textarea type="text" class="form-control" id="exampleInputMessag1"></textarea>
                          <span id="messageDot" class="red-dot"></span>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-primary" id="submitbutton">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
  </div>