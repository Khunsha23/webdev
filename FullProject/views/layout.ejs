<body>
<div id="outer-container">
<nav class="navbar navbar-expand-lg custom-navbar">
  <div class="container">
     <a class="navbar-brand me-auto" href="#"><img src="/images/logo.png" alt="Logo"></a>
     <!-- Off-canvas toggle button -->
     <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
      <span class="navbar-toggler-icon"></span>
     </button>
     <!-- Off-canvas menu -->
     <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
      <div class="offcanvas-header">
       
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav ms-auto"> <!-- Use ms-auto to push the items to the right -->
          <li class="nav-item">
            <a class="nav-link" href="/homepage.html">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/menu">Menu</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="">About Us</a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link" href="/contact-us.html">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/menu">API</a>
          </li>
          <li class="nav-item">
            <a class="nav-link icon" href="#">Cart</a>
          </li>
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link icon" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link icon" href="/register">Register</a>
            </li>
          <% } else { %>

            <li class="nav-item">
              <a class="nav-link icon" href="/logout">Logout</a>
            </li>
            <li class="nav-item">
              <a class="nav-link icon" href="#" style="color: rgb(234, 73, 126);">Welcome <%= user.name %>!</a>
            </li>
          
          <% } %>
          
        </ul>

        
        <% if(flash){%>
          <div class="alert alert-<%- flash.type %>">
            <%= flash.message %>
          </div>
        <% } %>
        
      </div>
     </div>
  </div>
 </nav>
</div>

